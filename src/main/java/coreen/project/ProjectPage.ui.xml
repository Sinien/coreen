<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
  <ui:style type="coreen.project.ProjectPage.Styles" field="_styles">
    body {
      font-family: Helvetica, Arial, sans-serif;
    }
    .header {
      border-bottom: 1px solid;
      width: 100%;
    }
    .title {
      font-family: Trebuchet MS, serif;
      font-size: 24px;
    }
    .inline {
      display: inline;
    }
    .navbar {
      padding-top: 5px;
      font-size: small;
    }
    .navbar a {
      text-decoration: none;
    }
    .navbar .SelTitle {
      font-weight: bold;
    }
  </ui:style>

  <g:HTMLPanel>
    <g:HTMLPanel styleName="{_styles.header}" ui:field="_header">
      <table cellpadding="0" cellspacing="0" width="100%">
      <tr><td class="{_styles.title}">
            <g:Hyperlink targetHistoryToken="" styleName="{_styles.inline}">
              Projects</g:Hyperlink> -
            <g:Hyperlink ui:field="_name" styleName="{_styles.inline}"/></td>
          <td align="right">
            <ui:msg>Imported:</ui:msg> <g:InlineLabel ui:field="_imported"/></td></tr>
      <tr><td><ui:msg>Version:</ui:msg> <g:InlineLabel ui:field="_version"/></td>
          <td align="right">
            <ui:msg>Last updated:</ui:msg>
            <g:InlineLabel ui:field="_lastUpdated"/></td></tr>
      <tr><td><ui:msg>Search:</ui:msg>
            <g:TextBox ui:field="_search" visibleLength="30"/>
            <g:Button ui:field="_go"><ui:msg>Go</ui:msg></g:Button></td>
          <td align="right">
            <g:Button ui:field="_update"><ui:msg>Update</ui:msg></g:Button>
            <g:Button ui:field="_edit"><ui:msg>Edit</ui:msg></g:Button></td></tr>
      </table>
      <g:FlowPanel styleName="{_styles.navbar}" ui:field="_navbar"/>
    </g:HTMLPanel>

    <g:SimplePanel ui:field="_contents"/>
  </g:HTMLPanel>
</ui:UiBinder>
